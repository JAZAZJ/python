h = float(input("請輸入身高(公尺):"))
w = float(input("請輸入體重(公斤):"))
bmi = w / h**2
if bmi < 14.8:
    print("你的bmi為" + str(bmi))
    print("體重過輕")
# elif bmi > 14.8 and bmi < 20.7:
elif 14.8 < bmi < 20.7:
    print("你的bmi為" + str(bmi))
    print("體重正常")
else:
    bmi > 20.7
    print("你的BMI為" + str(bmi))
    print("體重過重")